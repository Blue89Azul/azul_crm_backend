{
    "openapi": "3.1.0",
    "info": {
        "title": "AZUL CRM API",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost/api",
            "description": "dev"
        },
        {
            "url": "https://azulcrm.com/api",
            "description": "prod"
        }
    ],
    "paths": {
        "/signup": {
            "post": {
                "operationId": "auth.signup",
                "summary": "signUp",
                "tags": [
                    "Auth"
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "anyOf": [
                                        {
                                            "type": "object",
                                            "properties": {
                                                "token": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "token"
                                            ]
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "token": {
                                                    "type": "string",
                                                    "enum": [
                                                        "error"
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "token"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#/components/responses/ValidationException"
                    }
                }
            }
        },
        "/login/email": {
            "post": {
                "operationId": "auth.loginWithEmail",
                "tags": [
                    "Auth"
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "responses": {
            "ValidationException": {
                "description": "Validation error",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "description": "Errors overview."
                                },
                                "errors": {
                                    "type": "object",
                                    "description": "A detailed description of each field that failed validation.",
                                    "additionalProperties": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "required": [
                                "message",
                                "errors"
                            ]
                        }
                    }
                }
            }
        }
    }
}